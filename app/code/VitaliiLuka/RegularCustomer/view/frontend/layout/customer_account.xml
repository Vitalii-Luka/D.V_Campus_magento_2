<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface"
                   name="customer-account-navigation-personal-discount"
                   ifconfig="vitalii_luka_personal_discount/general/enabled"
            >
                <arguments>
                    <argument name="path" xsi:type="string">vitaliiluka_regular_customer/view/index</argument>
                    <argument name="label" xsi:type="string" translate="true">Personal Discount</argument>
                    <argument name="sortOrder" xsi:type="number">100</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
